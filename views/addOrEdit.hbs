<h3>{{viewTitle}}</h3>

<form action="/" method="POST" autocomplete="off">
   <input type="hidden" name="_id" value="{{flight._id}}">
   <div class="form-group">
       <label>Destino</label>
       <input type="text" class="form-control" name="destination" value="{{flight.destination}}" placeholder="¿Hacia dónde se dirige su vuelo?">

   </div>
   <div class="form-group">
       <label>Precio</label>
       <input type="text" class="form-control" name="price" value="{{flight.price}}" placeholder="Escriba el precio del vuelo">

   </div>

   <div class="form-group">
       <button type="submit" class="btn btn-primary">Agregar</button>
       <a href="/list" class="btn btn-success">
       Ver todos los vuelos</a>
       
   </div>
</form>